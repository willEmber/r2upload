{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "R2 Upload",
    "version": "1.0.0",
    "identifier": "com.r2upload.app",
    "build": {
        "beforeBuildCommand": "node scripts/build-browser.js",
        "beforeDevCommand": "",
        "devUrl": "http://localhost:3000",
        "frontendDist": "../public"
    },
    "app": {
        "windows": [
            {
                "title": "R2 Upload Console",
                "width": 1200,
                "height": 800,
                "minWidth": 800,
                "minHeight": 600,
                "resizable": true,
                "fullscreen": false,
                "center": true,
                "decorations": true,
                "transparent": false,
                "url": "desktop.html"
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "targets": [
            "msi",
            "nsis"
        ],
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": ""
        }
    }
}